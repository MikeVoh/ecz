<Page x:Class="Park.Enter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Park"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Enter">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="77"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Height="30" Width="150" Content="Логин" HorizontalContentAlignment="Center" FontSize="15"></Label>
        <Label Grid.Row="2" Height="30" Width="150" Content="Пароль" HorizontalContentAlignment="Center" FontSize="15"></Label>
        <TextBox Grid.Row="1" Height="30" Width="230" Name="Loggin"></TextBox>
        <PasswordBox Grid.Row="3" Name="Password" Height="30" Width="230"></PasswordBox>
        <Button Grid.Row="4" Content="Вход" Click="BtnEnter_Click"></Button>
    </Grid> 
</Page>
